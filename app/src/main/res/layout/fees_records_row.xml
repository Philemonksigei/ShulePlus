<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acad_records_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:elevation="3dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/term_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Term"
            android:textColor="#E91E63"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99ED38"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject_id"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SUBJECT"
                android:textColor="#9C27B0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mark_tittle"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MARK  %"
                android:textColor="#9C27B0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grade_tittle"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GRADE"
                android:textColor="#9C27B0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment_tiitle"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="COMMENT"
                android:textColor="#9C27B0"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eng_sname"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#AED0DF"
                android:text="ENGLISH"
                android:textColor="#9C27B0" />

            <TextView
                android:id="@+id/mark_eng"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDC096"
                android:gravity="center"
                android:text="76"
                android:textColor="#6620E3" />

            <TextView
                android:id="@+id/grade_eng"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E8B6C7"
                android:gravity="center"
                android:text="A-"
                android:textColor="#01100F" />

            <TextView
                android:id="@+id/comment_eng"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="V.Good"
                android:textColor="#F13776" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/math_sname"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#AED0DF"
                android:text="MATHS"
                android:textColor="#9C27B0" />

            <TextView
                android:id="@+id/mark_math"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDC096"
                android:gravity="center"
                android:textColor="#6620E3" />

            <TextView
                android:id="@+id/grade_math"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E8B6C7"
                android:gravity="center"
                android:textColor="#01100F" />

            <TextView
                android:id="@+id/comment_maths"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#F13776" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sci_sname"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#AED0DF"
                android:text="SCIENCE"
                android:textColor="#9C27B0" />

            <TextView
                android:id="@+id/mark_sci"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDC096"
                android:gravity="center"
                android:textColor="#6620E3" />

            <TextView
                android:id="@+id/grade_sci"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E8B6C7"
                android:gravity="center"
                android:textColor="#01100F" />

            <TextView
                android:id="@+id/comment_sci"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#F13776" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kis_sname"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#AED0DF"
                android:text="KISWAHILI"
                android:textColor="#9C27B0" />

            <TextView
                android:id="@+id/mark_kis"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDC096"
                android:gravity="center"
                android:textColor="#6620E3" />

            <TextView
                android:id="@+id/grade_kis"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E8B6C7"
                android:gravity="center"
                android:textColor="#01100F" />

            <TextView
                android:id="@+id/comment_kis"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#F13776" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ss_sname"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#AED0DF"
                android:text="S/RELIGION"
                android:textColor="#9C27B0" />

            <TextView
                android:id="@+id/mark_sre"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDC096"
                android:gravity="center"
                android:textColor="#6620E3" />

            <TextView
                android:id="@+id/grade_sre"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E8B6C7"
                android:gravity="center"
                android:textColor="#01100F" />

            <TextView
                android:id="@+id/comment_sre"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#F13776" />
        </LinearLayout>

        <TextView
            android:id="@+id/overal_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Well done!"
            android:textColor="#1130DA" />

    </LinearLayout>

</androidx.cardview.widget.CardView>